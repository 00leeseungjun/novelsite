<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>메인 페이지 - 나의 소설 사이트</title>
        <link rel="stylesheet" href="/index.css" />
        <script src="/js/user-menu.js"></script>
    </head>
    <body>
        <%- include('parts/header') %>

        <div>
            <div class="section-bar">
                <span class="section-title">전체</span>
                <button class="more-btn"><a href="/allnovel">더보기</a></button>
            </div>

            <div class="novel-list">
                <% novels.forEach(novel => { %>
                <a href="/novel/<%= novel.novelId %>">
                    <div class="novel-card">
                        <img
                            class="novel-image-cover"
                            src="<%= novel.coverImageUrl %>"
                            alt="<%= novel.title %> 커버"
                        />
                        <div class="novel-title"><%= novel.title %></div>
                        <div class="novel-author"><%= novel.nickname %></div>
                    </div>
                </a>
                <% }) %>
            </div>

            <hr />

            <div class="section-bar">
                <span class="section-title">연재</span>
                <button class="more-btn"><a href="/live">더보기</a></button>
            </div>

            <div class="novel-list">
                <% ongoingNovels.forEach(novel => { %>
                <a href="/novel/<%= novel.novelId %>">
                    <div class="novel-card">
                        <img
                            class="novel-image-cover"
                            src="<%= novel.coverImageUrl %>"
                            alt="<%= novel.title %> 커버"
                        />
                        <div class="novel-title"><%= novel.title %></div>
                        <div class="novel-author"><%= novel.nickname %></div>
                    </div>
                </a>
                <% }) %>
            </div>

            <hr />

            <div class="section-bar">
                <span class="section-title">완결</span>
                <button class="more-btn"><a href="/complete">더보기</a></button>
            </div>

            <div class="novel-list">
                <% completedNovels.forEach(novel => { %>
                <a href="/novel/<%= novel.novelId %>">
                    <div class="novel-card">
                        <img
                            class="novel-image-cover"
                            src="<%= novel.coverImageUrl %>"
                            alt="<%= novel.title %> 커버"
                        />
                        <div class="novel-title"><%= novel.title %></div>
                        <div class="novel-author"><%= novel.nickname %></div>
                    </div>
                </a>
                <% }) %>
            </div>
        </div>
    </body>
</html>
